extends layout
block content
	div(ng-controller='AppCtrl') 
		.qs-header
			.navbar.navbar-default.navbar-static-top(role='navigation')
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.sr-only Toggle navigation
				.navbar-collapse.collapse
					.logo
						img(src="/images/robot-arm.png")
					.qs-navbar
						ul.serverName
							| {{agentInfo.user}}@{{agentInfo.host}}:{{agentInfo.port}}
						ul.nav.navbar-nav
							- var obj = { '/logs':'Logs', '/execute':'Execute', '/api':'API', '/about':'About'  }
								- each val, key in obj
									- if (id == key)
										li.active
											a(href='#{key}') #{val}
									- else            
										li
											a(href='#{key}') #{val}
		.qs-container(ng-view)
		.qs-footer
			|  Started: {{agentInfo.startTime}} Copyright 2014 v
			span(app-version)
		script(src='js/lib/angular-1.2.9/angular.js')
		script(src='js/lib/angular-1.2.9/angular-route.js')
		script(src='js/lib/socket.io.js')
		script(src='js/lib/ui-bootstrap-tpls-0.11.0.min.js')
		script(src='js/lib/jsoneditor.js')
		script(src='js/lib/ace/ace.js')
		script(src='js/lib/jsonlint/jsonlint.js')
		script(src='js/app.js')
		script(src='js/services.js')
		script(src='js/controllers.js')
		script(src='js/filters.js')
		script(src='js/directives.js')
